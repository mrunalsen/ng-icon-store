{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "icon-store": {
      "projectType": "library",
      "root": "projects/icon-store",
      "sourceRoot": "projects/icon-store/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/icon-store/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/icon-store/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/icon-store/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "tsConfig": "projects/icon-store/tsconfig.spec.json",
            "polyfills": [
              "zone.js",
              "zone.js/testing"
            ]
          }
        },
        "generate-icons": {
          "builder": "@angular-extensions/svg-icons-builder:svg-icons-files-builder",
          "options": {
            "conversionType": "files",
            "srcFiles": [
              "./projects/icon-store/icons/**/*.svg"
            ],
            "outputDirectory": "./dist/icon-store/icons",
            "interfaceName": "IconStore",
            "generateType": false,
            "generateTypeObject": false,
            "generateCompleteIconSet": false,
            "exportCompleteIconSet": false,
            "fileName": "icon-store",
            "iconsFolderName": "icon-store",
            "objectName": "icon-store",
            "typeName": "iconStore",
            "prefix": "iconStore",
            "modelFileName": "icon-store",
            "barrelFileName": "index",
            "svgoConfig": {
              "plugins": [
                "cleanupAttrs"
              ]
            },
            "compileSources": true,
            "compilationOutput": "ESM"
          }
        }
      }
    }
  }
}